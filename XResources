URxvt*saveLines:                10000
URxvt*scrollBar:                false
URxvt*loginShell:               true
URxvt*secondaryScroll:          true
URxvt*visualBell:               true
URxvt*urgentOnBell:             true

! rofi
rofi.lines:                     5
rofi.color-enabled:             true
rofi.color-window:              c_background, c_background
rofi.color-normal:              c_background, c_foreground, c_background, c_darkgrey, c_foreground
rofi.color-active:              c_background, c_foreground, c_background, c_darkgrey, c_darkcyan
rofi.color-urgent:              c_background, c_foreground, c_background, c_darkgrey, c_red
rofi.separator-style:           none
rofi.bw:                        0
rofi.glob:                      true
rofi.terminal:                  rxvt-unicode
rofi.font:                      f_pango

