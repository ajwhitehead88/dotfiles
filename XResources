! fonts
#define f_pango                 DejaVu\ Sans\ 10
#define f_regular               xft:DejaVu Sans Mono:size=10:style=Book
#define f_bold                  xft:DejaVu Sans Mono:size=10:style=Bold
#define f_italic                xft:DejaVu Sans Mono:size=10:style=Oblique
#define f_bolditalic            xft:DejaVu Sans Mono:size=10:b:style=Bold Oblique

! colours
#define c_background            #212021
#define c_foreground            #DDDDDD
#define c_black                 #353535
#define c_darkgrey              #666666
#define c_darkred               #D81860
#define c_red                   #F00060
#define c_darkgreen             #B7CE42
